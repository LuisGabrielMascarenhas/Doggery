<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:orientation="vertical"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnvoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="chat"
                android:src="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="316dp"
                android:layout_height="200dp"
                android:backgroundTint="#fff"
                android:rotationX="5"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/avatarh" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Guilherme"
                        android:textColor="#685453"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Grajaú, São Paulo"
                        android:textColor="#A6A6A6" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="150dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="R$ 50 | noite"
                        android:textColor="#A555EC"
                        android:textSize="16sp" />

                </LinearLayout>


                <RatingBar
                    style="@android:style/Widget.Holo.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="90dp"
                    android:numStars="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="88dp"
                    android:fontFamily="@font/montserrat"
                    android:text="4,5" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/heart" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/photos" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#DCE1CEF3"
                android:text="Profile"
                android:textColor="#A555EC"
                android:fontFamily="@font/montserrat"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#DCE1CEF3"
                android:text="Reviwes"
                android:textColor="#A555EC"
                android:fontFamily="@font/montserrat"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#685453"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:fontFamily="@font/montserrat"
                android:text="Sou biológo formado e apaixonado por doguinhos. Trabalhei durante 2 anos em uma clinica / pet shop."
                android:textSize="15sp"
                android:textColor="#A6A6A6"
                android:layout_gravity="top"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills and certifications"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:textColor="#685453"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:fontFamily="@font/montserrat"
                android:text="Medicação e Vacina Transporte de emergência Primeiros Socorros Exeperiência com dogs idosos"
                android:textSize="15sp"
                android:textColor="#A6A6A6"
                android:layout_gravity="top"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponibilidade"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#685453"
                android:layout_gravity="top"
                android:layout_marginLeft="40dp"/>


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="280dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:background="#DCE1CEF3"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#A6A6A6"
                android:text="Get Started"
                android:fontFamily="@font/montserrat"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnchat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#A555EC"
                android:text="Chat"
                android:fontFamily="@font/montserrat"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>