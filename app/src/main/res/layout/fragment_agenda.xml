<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendaFragment"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCE1CEF3"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="chat"
            android:src="@drawable/chat" />

        <ImageButton
            android:id="@+id/btnnoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="notificacao"
            android:src="@drawable/bell" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="menu"
            android:src="@drawable/menuburguer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_menu"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agenda"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="180dp"
        android:layout_height="3dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="140dp"
        android:background="#A455EB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="200dp">

        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DCE1CEF3"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnagendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendar"
            android:fontFamily="@font/montserrat"
            android:textColor="#A555EC"
            android:backgroundTint="#DCE1CEF3"
            android:layout_margin="20dp"/>

    </LinearLayout>



</FrameLayout>